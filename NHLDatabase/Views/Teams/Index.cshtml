@model IEnumerable<NHLDatabase.Models.NHL.Team>

@{
    ViewBag.Title = "Index";
}


<p class="addteam">
    <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
        <span class="hidden-xs">Add Team</span>
    </a>
</p>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>

                    @Html.ActionLink("Edit", "Edit", new { id = item.TeamName }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TeamName }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TeamName }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
